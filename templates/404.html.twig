{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<style>
    .page-container{
        display: flex;
        justify-content: center;
    }

    .error-container {
        margin: 10vh 16px 0 16px;
        max-width: 600px;
        padding: 20px;
        border-radius: 8px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 36px;
        margin-bottom: 20px;
    }

    p {
        font-size: 18px;
        margin-bottom: 20px;
    }

    a {
        text-decoration: none;
        color: #007bff;
        font-weight: bold;
    }

    a:hover {
        text-decoration: underline;
    }
</style>


<div class="page-container">
    <div class="error-container">
        <h1>Error 404 - Page Not Found</h1>
        <p>Oops! The page you are looking for could not be found.</p>
        <p>Please check the URL or <a href="{{ path('app_choose_city') }}">go back to the homepage</a>.</p>
    </div>
</div>
{% endblock %}








