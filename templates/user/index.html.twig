{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
<style>
.header{
    margin-top: 18px;
    display: flex;
    justify-content: center
}

.add-user{
    display: flex;
    justify-content: center;
}

.add-button{
   width: 250px;
   margin-bottom: 24px;
}

.table-small-device{
    display: none;
}

.table-info-container{
    display: flex;
    flex-direction: column;
}

.element-info{
    display: flex;
    justify-content: space-between;
}

.btn-container{
    display: flex;
    justify-content: space-between;
}

.btn-show{
    margin-right: 8px;
}

@media(max-width: 590px){
    .table{
        display: none;
    }

    .table-small-device{
        display: block;
    }
}
</style>

<div class="page-container">
    <h2 class="header">Admin panel</h2>
    <div class="add-user">
        <a role="button" class="btn btn-primary add-button" href="{{ path('app_user_new') }}">Create new</a>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>{{ user.fullName }}</td>
                <td>
                    <a role="button" class="btn btn-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="table-small-device">
        <div class="table-info-container">
            {% for user in users %}
                <div class="reservation-info">
                    <div class="element-info">
                        <div>Email:</div>
                        <div>{{ user.email }}</div>
                    </div>

                    <div class="element-info">
                        <div>Actions:</div>
                        <div class="btn-container">
                            <a role="button" class="btn btn-secondary" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>
                        </div>
                    </div>
                </div>
                <hr>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
